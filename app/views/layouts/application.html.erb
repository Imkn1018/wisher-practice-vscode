<!DOCTYPE html>
<html>
  <head>
    <title>Wisher</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    
    <%= javascript_pack_tag 'application' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg bg-warning">
        <div class="container">
          <!-- 管理者側と顧客側で遷移先を変える　-->


          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>

          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">

              <!--会員ログイン-->
              <% if user_signed_in? %>
                <li class="mr-5 pt-2 text-primary">ようこそ、<span class="mr-1"><%= current_user.name %></span>さん！</li>
                <li><%= link_to "マイページ", users_path, class: "btn btn-outline-primary nav-link text-primary m-2" %></li>
                <li><%= link_to "新規作成", new_wish_path, class: "btn btn-outline-primary nav-link text-primary m-2" %></li>
                <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "btn btn-outline-primary nav-link text-primary m-2" %></li>

              <!--管理者ログイン-->

                <!--ログイン前-->
              <% else %>
              <li><%= link_to "新規登録", new_user_registration_path, class: "btn btn-outline-primary nav-link text-primary m-2" %></li>
              <li><%= link_to "ログイン", new_user_session_path, class: "btn btn-outline-primary nav-link text-primary m-2" %></li>

            <% end %>
          </ul>
        </div>
      </div>
    </nav>
  </header>

    <%= yield %>
  </body>
</html>
